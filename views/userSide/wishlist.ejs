                    <script>
                        async function addToWishlist(productId) {
                            try {
                                const response = await fetch('/addToWishlist', {
                                    method: 'POST',
                                    headers: {
                                        'Content-Type': 'application/json',
                                    },
                                    body: JSON.stringify({ productId }),
                                });
                    
                                const result = await response.json();
                                if (result.notLogin) {
                                    alert('Please log in to add items to your wishlist.');
                                } else if (result.existing) {
                                    alert('This item is already in your wishlist.');
                                } else if (result.addedToWishlist) {
                                    alert('Item added to your wishlist.');
                                }
                            } catch (error) {
                                console.error('Error adding to wishlist:', error);
                            }
                        }
                    
                        function toggleWishlist(productId, event) {
                            event.preventDefault();
                            $.ajax({
                                method: 'POST',
                                url: '/toggleWishlist',
                                data: { productId },
                                success: function(res) {
                                    if (res.notLogin) {
                                        const loginButton = document.querySelector('.login-button');
                                        if (loginButton) {
                                            const clickEvent = new MouseEvent('click', {
                                                bubbles: true,
                                                cancelable: true,
                                                view: window
                                            });
                                            loginButton.dispatchEvent(clickEvent);
                                        } else {
                                            console.error('Login button not found');
                                        }
                                    } else if (res.addedToWishlist) {
                                        Swal.fire({
                                            position: "bottom-end",
                                            title: "<i class='fa-solid fa-thumbs-up'>&nbsp</i> Item Added To Wishlist",
                                            showConfirmButton: false,
                                            timer: 1500,
                                            customClass: {
                                                title: 'swal-title-size',
                                                popup: 'swal-bg-color',
                                            },
                                            html: true,
                                            backdrop: false
                                        });
                                        document.getElementById(`wishlist-text-${productId}`).innerText = 'Remove from Wishlist';
                                    } else if (res.removedFromWishlist) {
                                        Swal.fire({
                                            position: "bottom-end",
                                            title: "<i class='fa-solid fa-thumbs-up'>&nbsp</i> Item Removed From Wishlist",
                                            showConfirmButton: false,
                                            timer: 1500,
                                            customClass: {
                                                title: 'swal-title-size',
                                                popup: 'swal-bg-color',
                                            },
                                            html: true,
                                            backdrop: false
                                        });
                                        document.getElementById(`wishlist-text-${productId}`).innerText = 'Add to Wishlist';
                                    } else {
                                        Swal.fire({
                                            position: "bottom-end",
                                            title: "Item Not Added To Wishlist",
                                            showConfirmButton: false,
                                            timer: 1500
                                        });
                                    }
                                },
                            });
                        }
                    
                        async function removeFromWishlist(productId, event) {
                            event.preventDefault();
                            try {
                                const response = await fetch('/removeFromWishlist', {
                                    method: 'POST',
                                    headers: {
                                        'Content-Type': 'application/json',
                                    },
                                    body: JSON.stringify({ productId }),
                                });
                    
                                const result = await response.json();
                                if (result.removedFromWishlist) {
                                    Swal.fire({
                                        position: "bottom-end",
                                        title: "<i class='fa-solid fa-thumbs-up'>&nbsp</i> Item Removed From Wishlist",
                                        showConfirmButton: false,
                                        timer: 1500,
                                        customClass: {
                                            title: 'swal-title-size',
                                            popup: 'swal-bg-color',
                                        },
                                        html: true,
                                        backdrop: false
                                    }).then(() => {
                                        location.reload();
                                    });
                                } else {
                                    Swal.fire({
                                        position: "bottom-end",
                                        title: "Error removing item from wishlist.",
                                        showConfirmButton: false,
                                        timer: 1500
                                    });
                                }
                            } catch (error) {
                                console.error('Error removing from wishlist:', error);
                                Swal.fire({
                                    position: "bottom-end",
                                    title: "Error removing item from wishlist.",
                                    showConfirmButton: false,
                                    timer: 1500
                                });
                            }
                        }
                    
                        function confirmRemoveFromWishlist(productId, event) {
                            event.preventDefault();
                            Swal.fire({
                                title: 'Are you sure?',
                                text: "Do you really want to remove this item from your wishlist?",
                                icon: 'warning',
                                showCancelButton: true,
                                confirmButtonColor: '#3085d6',
                                cancelButtonColor: '#d33',
                                confirmButtonText: 'Yes, remove it!',
                                cancelButtonText: 'Cancel'
                            }).then((result) => {
                                if (result.isConfirmed) {
                                    removeFromWishlist(productId, event);
                                }
                            });
                        }
                    </script>
                                    
                    
                    
