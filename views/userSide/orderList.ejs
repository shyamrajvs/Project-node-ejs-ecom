    <div class="page-wrapper">
        <h1>My Orders</h1>
        <% if (orders.length > 0) { %>
            <ul>
                <% orders.forEach(order => {
                    let totalQuantity = order.products.reduce((acc, product) => acc + product.quantity, 0);
                %>
                    <li>
                        <p><strong>Order ID:</strong> <%= order._id %></p>
                        <p><strong>Total Amount:</strong> $<%= order.salePrice %></p>
                        <p><strong>Payment Method:</strong> <%= order.paymentDetails %></p>
                        <p><strong>Payment Status:</strong> <%= order.paymentStatus %></p>
                        <p><strong>Shipping Method:</strong> <%= order.shippingMethod %></p>
                        <p><strong>Total Items:</strong> <%= totalQuantity %></p>
                        <p><strong>Order Status:</strong> <%= order.orderStatus %></p>
                        <p class="info"><strong>Order Placed At:</strong> <%= order.createdAt.toDateString() %></p>
                        <% if (order.deliveredOn) { %>
                            <p class="info"><strong>Delivered On:</strong> <%= order.deliveredOn.toDateString() %></p>
                        <% } %>
                        <% if (order.orderStatus.toLowerCase() !== 'cancelled') { %>
                            <button type="button" class="cancel-order-btn" data-order-id="<%= order._id %>">Cancel Order</button>
                        <% } %>
                        <!-- Displaying product images and names -->                                   
                    </li>
                    <% }); %>
                </ul>
                <% if (totalPages > 1) { %>
                    <div class="pagination">
                        <% if (currentPage > 1) { %>
                            <a href="/my-orders?page=<%= currentPage - 1 %>">&laquo; Prev</a>
                        <% } else { %>
                            <span class="disabled">&laquo; Prev</span>
                        <% } %>
                
                        <% for(let i = 1; i <= totalPages; i++) { %>
                            <a href="/my-orders?page=<%= i %>" class="<%= currentPage === i ? 'active' : '' %>"><%= i %></a>
                        <% } %>
                
                        <% if (currentPage < totalPages) { %>
                            <a href="/my-orders?page=<%= currentPage + 1 %>">Next &raquo;</a>
                        <% } else { %>
                            <span class="disabled">Next &raquo;</span>
                        <% } %>
                    </div>
                <% } %>                
            <% } else { %>
                <p>No orders found.</p>
            <% } %>
        </div>
    
        <style>
            .pagination a, .pagination span.disabled {
                padding: 8px 16px;
                margin: 0 4px;
                text-decoration: none;
                border: 1px solid #ddd;
                color: #070808;
            }
        
            .pagination a.active {
                background-color: #030303;
                color: white;
                border-color: #000000;
            }
        
            .pagination a:hover:not(.active), .pagination span.disabled:hover {
                background-color: #ddd;
            }
        
            .pagination span.disabled {
                color: #a9a9a9;
                border-color: #ddd;
                cursor: not-allowed;
            }
        </style>
    
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                const cancelOrderButtons = document.querySelectorAll('.cancel-order-btn');
    
                cancelOrderButtons.forEach(button => {
                    button.addEventListener('click', function () {
                        const orderId = this.dataset.orderId;
    
                        Swal.fire({
                            title: 'Select a reason for cancellation',
                            html: `
                                <form id="cancel-order-form-${orderId}" action="/cancel-order" method="POST">
                                    <input type="hidden" name="orderId" value="${orderId}">
                                    <select name="cancellationReason" class="swal2-select" required>
                                        <option value="" disabled selected>Select a reason</option>
                                        <option value="Size issue">Size issue</option>
                                        <option value="Product quality issue">Product quality issue</option>
                                        <option value="Received wrong product">Received wrong product</option>
                                        <option value="Other">Other</option>
                                    </select>
                                </form>
                            `,
                            showCancelButton: true,
                            confirmButtonText: 'Cancel Order',
                            cancelButtonText: 'Cancel',
                            preConfirm: () => {
                                const form = document.getElementById('cancel-order-form-' + orderId);
                                if (form) {
                                    form.submit();
                                }
                            }
                        });
                    });
                });
            });
        </script>
    
    
    
    

