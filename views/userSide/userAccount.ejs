									<!-- Dashboard Tab Content -->
									<div class="tab-pane fade show active" id="tab-dashboard" role="tabpanel" aria-labelledby="tab-dashboard-link">
										<p>Hello <span class="font-weight-normal text-dark"><%= userData.name %></span>  
											<br>
											From your account dashboard you can view your <a href="#tab-orders" class="tab-trigger-link link-underline">recent orders</a>, manage your <a href="#tab-address" class="tab-trigger-link">shipping and billing addresses</a>, and <a href="#tab-account" class="tab-trigger-link">edit your password and account details</a>.</p>
									</div><!-- .End .tab-pane -->
		
									<!-- Orders Tab Content -->
									<div class="tab-pane fade" id="tab-orders" role="tabpanel" aria-labelledby="tab-orders-link">
										<a href="/my-orders" class="btn btn-outline-primary-2"><span>Your Orders</span><i class="icon-long-arrow-right"></i></a>
									</div><!-- .End .tab-pane -->
		
									<!-- Downloads Tab Content -->
									<!-- Orders Tab Content -->
									<div class="tab-pane fade" id="tab-orders" role="tabpanel" aria-labelledby="tab-orders-link">
										<p>No order has been made yet.</p>
										<!-- Update the link to point to the order details page with the correct order ID -->
										<a href="/my-orders" class="btn btn-outline-primary-2"><span>View Orders</span><i class="icon-long-arrow-right"></i></a>
									</div><!-- .End .tab-pane -->

		
									<!-- Addresses Tab Content -->
									<!-- addressTabContent.ejs -->
										<div class="tab-pane fade" id="tab-address" role="tabpanel" aria-labelledby="tab-address-link">
											<% if (userData.address && userData.address.length > 0) { %>
												<p>The following addresses will be used on the checkout page by default.</p>
												<% userData.address.forEach(function(address, i) { %>
													<div class="row" id="address_<%= address._id %>">
														<div class="col-lg-6">
															<div class="card card-dashboard">
																<div class="card-body">
																	<h3 class="card-title"><%= address.addressType %></h3>
																	<p>
																		<%= address.name %><br>
																		<%= address.addressLine1 %><br>
																		<%= address.addressLine2 %><br>
																		<%= address.city %>, <%= address.state %> <%= address.pinCode %><br>
																		<%= address.phone %><br>
																		<a href="/edit-address/<%= address._id %>">Edit <i class="icon-edit"></i></a>
																		<button onclick="deleteAddress('<%= address._id %>')" class="btn btn-danger">Delete</button>
																	</p>
																</div>
															</div>
														</div>
													</div>
												<% }); %>
											<% } else { %>
												<p>No addresses added. Please add your addresses.</p>
											<% } %>                    
											<a href="/add-address" class="btn btn-primary">Add Address</a>
										</div><!-- .End .tab-pane -->

									
									<script>
										function deleteAddress(addressId) {
											fetch(`/delete-address/${addressId}`, {
												method: 'DELETE',
												headers: {
													'Content-Type': 'application/json'
												}
											})
											.then(response => {
												if (response.ok) {
													console.log("Address deleted successfully");
													// Remove the address div from the DOM
													const addressDiv = document.getElementById(`address_${addressId}`);
													addressDiv.remove();
												} else {
													console.error("Failed to delete address");
												}
											})
											.catch(error => {
												console.error("Error:", error);
											});
										}
									</script>									
		
									<!-- Account Details Tab Content -->
									                                   
