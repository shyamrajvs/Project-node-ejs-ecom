                <!-- <div class="col-lg-6"> -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h4>Basic</h4>
                        </div>
                        <div class="card-body">
                            <form method="post" action="/admin/add-product" enctype="multipart/form-data">
                                <div class="mb-4">
                                    <label for="product_name" class="form-label">Product title</label>
                                    <input type="text" placeholder="Type here" name="productName" class="form-control" id="product_name">
                                </div>
                                <div class="mb-4">
                                    <label for="brand_name" class="form-label">Brand title</label>
                                    <input type="text" placeholder="Type here" class="form-control" name="brandName" id="brand_name">
                                </div>
                                <div class="mb-4">
                                    <label class="form-label">Full description</label>
                                    <textarea placeholder="Type here" class="form-control" name="description" rows="4"></textarea>
                                </div>
                                <div class="row">
                                    <div class="col-lg-4">
                                        <div class="mb-4">
                                            <label class="form-label">Regular price</label>
                                            <div class="row gx-2">
                                                <input placeholder="₹" type="text" name="regularPrice" class="form-control">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="mb-4">
                                            <label class="form-label">Sale price</label>
                                            <input placeholder="₹" type="text" name="salePrice" class="form-control">
                                        </div>
                                    </div>
                                </div>
                                <div class="mb-4">
                                    <div class="card-header">
                                        <h4>Media</h4>
                                    </div>
                                    <div class="card-body">
                                        <div id="image-container"></div>
                                        <div class="input-upload">
                                            <img src="/adminassets/imgs/theme/upload.svg" alt="">
                                            <input multiple name="image" id="image" class="form-control" type="file" onclick="removeImageFromInput()">
                                        </div>
                                    </div>
                                </div>
                                <div class=" mb-4">
                                    <div class="card-header">
                                        <h4>Organization</h4>
                                    </div>
                                    <div class="card-body">
                                        <div class="row gx-2">
                                            <div class="col-sm-6 mb-3">
                                                <label class="form-label">Category</label>
                                                <select class="form-select" name="category">
                                                    <% for (var i = 0; i < category.length; i++) { %>
                                                    <option value="<%= category[i].name %>"><%= category[i].name %></option>
                                                    <% } %>
                                                </select>
                                            </div>
                                            <div class="mb-4">
                                                <label for="product_name" class="form-label">Quantity</label>
                                                <input type="text" class="form-control" name="quantity">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-md rounded font-sm hover-up">Publish</button>
                            </form>

                                    <!-- Include SweetAlert CSS -->
                                    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@10">

                                    <!-- Include SweetAlert JS -->
                                    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>

                            
                                    <script>
                                        const imageInput = document.getElementById('image');
                                        const imageContainer = document.getElementById('image-container');
                                    
                                        imageInput.addEventListener('change', function() {
                                            const files = Array.from(imageInput.files);
                                            const maxImages = 5;
                                            const allowedTypes = ['image/jpeg', 'image/png', 'image/gif']; 
                                            const existingImages = imageContainer.querySelectorAll('img').length;
                                            
                                            if (files.length + existingImages > maxImages) {
                                                Swal.fire({
                                                    icon: 'error',
                                                    title: 'Oops...',
                                                    text: 'You can upload a maximum of ' + maxImages + ' images.'
                                                });
                                                return;
                                            }
                                    
                                            files.forEach(file => {
                                                if (!allowedTypes.includes(file.type)) {
                                                    Swal.fire({
                                                        icon: 'error',
                                                        title: 'Invalid File Type',
                                                        text: 'Only images (JPG, PNG, GIF) are allowed.'
                                                    });
                                                } else {
                                                    const reader = new FileReader();
                                                    reader.onload = function(e) {
                                                        const imageElement = document.createElement('img');
                                                        imageElement.src = e.target.result;
                                                        imageElement.classList.add('preview-image');
                                    
                                                        const deleteButton = document.createElement('button');
                                                        deleteButton.textContent = '❌';
                                                        deleteButton.classList.add('delete-button');
                                                        deleteButton.addEventListener('click', function() {
                                                            imageContainer.removeChild(imageElement);
                                                            imageContainer.removeChild(deleteButton);
                                                        });
                                    
                                                        imageContainer.appendChild(imageElement);
                                                        imageContainer.appendChild(deleteButton);
                                                    };
                                                    reader.readAsDataURL(file);
                                                }
                                            });
                                        });
                                    
                                        function removeImageFromInput(fileToRemove) {
                                            const files = Array.from(imageInput.files);
                                            const index = files.indexOf(fileToRemove);
                                            if (index !== -1) {
                                                files.splice(index, 1);
                                                imageInput.value = '';
                                                files.forEach(file => {
                                                    imageInput.files.add(file);
                                                });
                                            }
                                        }
                                    </script>
                                    
                            
                            
                            
                            <style>
                                .preview-image {
                                    max-width: 100px; 
                                    max-height: 100px; 
                                    margin-right: 10px; 
                                    margin-bottom: 10px; 
                                }
                                .delete-button {
                                    background-color: transparent;
                                    border: none;
                                    cursor: pointer;
                                    font-size: 20px;
                                    color: red;
                                }
                            </style>
                            
                            
                            
