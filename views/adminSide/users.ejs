<!DOCTYPE HTML>
<html lang="en">

<head>
    <meta charset="utf-8">
<title>L&A </title>    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta property="og:title" content="">
    <meta property="og:type" content="">
    <meta property="og:url" content="">
    <meta property="og:image" content="">
    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="/adminassets/imgs/theme/favicon.svg">
    <!-- Template CSS -->
    <link href="/adminassets/css/main.css" rel="stylesheet" type="text/css" />
</head>

<body>
    <div class="screen-overlay"></div>
    <!-- sidebar -->
    <%- include('partials/sidebar')%>
    <!-- sidebar -->
    <main class="main-wrap">
         <!-- header -->
       <%- include('partials/header')%>
       <!-- header -->
    <section class="content-main">
        <div class="content-header">
            <div>
                <h2 class="content-title card-title">User</h2>
            </div>
        </div>
        <div class="card mb-4">
            <header class="card-header">
                <div class="row align-items-center">
                    <div class="col col-check flex-grow-0">
                    </div>
                </div>
            </header> <!-- card-header end// -->
            <div class="card-body">
                <% if (users.length > 0) { %>
                    <% for (let i = 0; i < users.length; i++) { %>
                        <article class="itemlist">
                            <div class="row align-items-center">
                                <div class="col col-check flex-grow-0">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox">
                                    </div>
                                </div>
                                <div class="col-lg-3 col-sm-4 col-8 flex-grow-1 col-name">
                                    <a class="itemside" href="#">
                                        <div class="info">
                                            <h6 class="mb-0">
                                                <%= users[i].name %>
                                            </h6>
                                        </div>
                                    </a>
                                </div>
                                <div class="col-lg-3 col-sm-2 col-4 col-price">
                                    <span>
                                        <%= users[i].email %>
                                    </span>
                                </div>
                                <div class="col-lg-2 col-sm-2 col-4 col-status">
                                    <% if (users[i].isActive === false) { %>
                                        <span class="badge rounded-pill alert-danger">Inactive</span>
                                    <% } else { %>
                                        <span class="badge rounded-pill alert-success">Active</span>
                                    <% } %>
                                </div>
                                <div class="col-lg-2 col-sm-2 col-4 col-date">
                                    <span>
                                        <%= users[i].phoneNumber %>
                                    </span>
                                </div>
                                <div class="col-lg-1 col-sm-2 col-4 col-action text-end">
                                    <% if (users[i].isActive === false) { %>
                                        <a class="btn btn-sm font-sm btn-light rounded"
                                            onclick="confirmUnblock('<%= users[i]._id %>')"
                                            href="/admin/block-user?id=<%= users[i]._id %>">
                                            <i class="material-icons md-delete_forever"></i> Unblock
                                        </a>
                                    <% } else { %>
                                        <a class="btn btn-sm font-sm btn-light rounded"
                                            onclick="confirmBlock('<%= users[i]._id %>')"
                                            href="/admin/block-user?id=<%= users[i]._id %>">
                                            <i class="material-icons md-delete_forever"></i> Block
                                        </a>
                                    <% } %>
                                </div>
                            </div>
                        </article>
                    <% } %>
                <% } else { %>
                    <div>
                        <p>Users not found</p>
                    </div>
                <% } %>
            </div> <!-- card-body end// -->
        </div> <!-- card end// -->
    </section> <!-- content-main end// -->
    <script>
        function confirmBlock(userId) {
            if (confirm("Are you sure you want to block this user?")) {
                location.href = `/admin/block-user?id=${userId}`;
            }
        }
    
        function confirmUnblock(userId) {
            if (confirm("Are you sure you want to unblock this user?")) {
                location.href = `/admin/block-user?id=${userId}`;
            }
        }
    </script>
    
    </main>
</body>

